{
  "name": "overlay-window",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/overlay-window/src",
  "tags": [],
  "// targets": "to see all targets run: nx show project overlay-window --web",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/app-electron/overlay-window",
        "deleteOutputPath": false
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production",
          "baseHref": "./"
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "overlay-window:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "overlay-window:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "overlay-window:build:production",
          "hmr": false
        }
      }
    }
  }
}
